{
  "version": "0.2.0",
  "configurations": [
    {
      // 1️⃣ Backend-only development (Swagger enabled)
      "name": "Backend Dev (IFC Server only)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build ifcserver",
      "program": "${workspaceFolder}/src/ifcserver/bin/Debug/net9.0/IfcServer.dll",
      "cwd": "${workspaceFolder}/src/ifcserver",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://0.0.0.0:5000",
        "ConnectionStrings__DefaultConnection": "Host=db;Port=5432;Database=ifcdb;Username=postgres;Password=postgres"
      },
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "console": "integratedTerminal"
    },

    {
      // 2️⃣ Frontend-only dev server (no debugger)
      "name": "Frontend Dev (React/Vite only)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/src/webui",
      "console": "integratedTerminal"
    },

    {
      // 3️⃣ Full-stack production integration
      "name": "Full-stack Prod (Kestrel + React build)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build webui",
      "program": "${workspaceFolder}/src/ifcserver/bin/Debug/net9.0/IfcServer.dll",
      "cwd": "${workspaceFolder}/src/ifcserver",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Production",
        "ASPNETCORE_URLS": "http://0.0.0.0:5000",
        "ConnectionStrings__DefaultConnection": "Host=db;Port=5432;Database=ifcdb;Username=postgres;Password=postgres"
      },
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "console": "integratedTerminal"
    },

    {
      // 4️⃣ Frontend Debug mit Chrome/Edge und funktionierenden Breakpoints
      "name": "Frontend Debug (Vite in Chrome)",
      "type": "chrome", // oder "pwa-msedge"
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/src/webui",
      "sourceMaps": true,
      "trace": true,
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "start webui dev",
      "sourceMapPathOverrides": {
        // ⚙️ Mappings für Devcontainer
        "webpack:///src/*": "${webRoot}/src/*",
        "/*": "${workspaceFolder}/*",
        "/workspaces/*": "${workspaceFolder}/*"
      },
      "presentation": {
        "group": "frontend",
        "order": 2
      }
    }
  ],

  "compounds": [
    {
      // 5️⃣ Combined Full Dev Mode
      "name": "Full Dev Debug (Backend + Frontend)",
      "configurations": [
        "Backend Dev (IFC Server only)",
        "Frontend Debug (Vite in Chrome)"
      ],
      "preLaunchTask": "build ifcserver",
      "stopAll": true
    }
  ]
}
